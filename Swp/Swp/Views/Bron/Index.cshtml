@model IEnumerable<Swp.Model.Bron>

@{
    ViewData["Title"] = "SWP - Uzbrojenie";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Dodaj broń</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa broni
            </th>
            <th>
                Stan broni
            </th>
            <th>
                Żołnierz
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwabroni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StanBroni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdzolnierzaNavigation.StopienString) @Html.DisplayFor(modelItem => item.IdzolnierzaNavigation.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idbroni">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idbroni">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idbroni">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
