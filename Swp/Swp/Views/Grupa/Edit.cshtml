@model Swp.Model.Grupa

@{
    ViewData["Title"] = "Edytuj";
}

<h2>Edytuj grupę</h2>

<h4>@Html.DisplayFor(model => model.Idgrupy)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idgrupy" />
            <div class="form-group">
                <label asp-for="Nazwagrupy" class="control-label">Specjalność</label>
                <input asp-for="Nazwagrupy" class="form-control" />
                <span asp-validation-for="Nazwagrupy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
