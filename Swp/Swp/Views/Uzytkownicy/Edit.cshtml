@model Swp.Model.Uzytkownik

@{
    ViewData["Title"] = "Edytuj";
}

<h2>Edit</h2>

<h4>Użytkownik @Html.ValueFor(mod => Model.Login)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Iduzytkownika" />
            <input type="hidden" asp-for="Haslo" />
            <input type="hidden" asp-for="Login" />
            <div class="form-group">
                <label asp-for="Idroli" class="control-label"></label>
                <select asp-for="Idroli" class="form-control" asp-items="(IEnumerable<SelectListItem>)@ViewData["Rola"];"></select>
                <span asp-validation-for="IdroliNavigation.Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
