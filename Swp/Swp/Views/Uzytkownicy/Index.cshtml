@model IEnumerable<Swp.Model.Uzytkownik>
@{
    ViewData["Title"] = "Index";
    IEnumerable<Swp.Model.Uzytkownik> uzytkownik = ViewData["Uzytkownik"] as IEnumerable<Swp.Model.Uzytkownik>;
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
   @if (User.Identity.IsAuthenticated)
        {
       @if(Model.Where(z => z.Iduzytkownika.ToString() == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value).Select(a => a.IdroliNavigation.Nazwa).FirstOrDefault() == "Administrator")
           
            {
        <p> TWOJA STARA</p>
            }
        }

<table class="table">
    <thead>
        <tr>
            <th>
                Użytkownik
            </th>
            <th>
                Zołnierz
            </th>
            <th>
                Rola
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
       
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zolnierz.Where(z => z.Iduzytkownika == item.Iduzytkownika).FirstOrDefault().FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdroliNavigation.Nazwa)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Iduzytkownika">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Iduzytkownika">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Iduzytkownika">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
