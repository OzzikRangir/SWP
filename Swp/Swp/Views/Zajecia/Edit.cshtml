@model Swp.Model.Zajecie

@{
    ViewData["Title"] = "Edytuj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj</h2>

<h4>Zajecie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idzajecia" />
            <div class="form-group">
                <label asp-for="Idgrupy" class="control-label"></label>
                <select asp-for="Idgrupy" class="form-control" asp-items="ViewBag.Idgrupy"></select>
                <span asp-validation-for="Idgrupy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datazajecia" class="control-label"></label>
                <input asp-for="Datazajecia" class="form-control" />
                <span asp-validation-for="Datazajecia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwazajecia" class="control-label"></label>
                <input asp-for="Nazwazajecia" class="form-control" />
                <span asp-validation-for="Nazwazajecia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Miejsce" class="control-label"></label>
                <input asp-for="Miejsce" class="form-control" />
                <span asp-validation-for="Miejsce" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
